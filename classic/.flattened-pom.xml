<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.sparkutils</groupId>
  <artifactId>testing-classic_4.0.0.oss_4.0_2.13</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <name>Classic Testing</name>
  <description>A collection of helper utilities for testing Spark</description>
  <url>https://sparkutils.github.io/testing/testing-classic_4.0.0.oss_4.0_2.13/</url>
  <licenses>
    <license>
      <name>The Apache Software License, Version 2.0</name>
      <url>https://github.com/sparkutils/testing/blob/main/LICENSE</url>
    </license>
  </licenses>
  <developers>
    <developer>
      <name>Chris Twiner</name>
    </developer>
  </developers>
  <scm>
    <connection>scm:git:git://github.com/sparkutils/testing.git/testing-classic_4.0.0.oss_4.0_2.13</connection>
    <developerConnection>scm:git:ssh://github.com:sparkutils/testing.git/testing-classic_4.0.0.oss_4.0_2.13</developerConnection>
    <url>http://github.com/sparkutils/testing/tree/master/testing-classic_4.0.0.oss_4.0_2.13</url>
  </scm>
  <distributionManagement>
    <repository>
      <id>central</id>
      <name>Quality Release Repository</name>
      <url>https://central.sonatype.com/repository/maven/</url>
    </repository>
    <snapshotRepository>
      <id>central</id>
      <name>Quality Snapshot Repository</name>
      <url>https://central.sonatype.com/repository/maven-snapshots/</url>
    </snapshotRepository>
  </distributionManagement>
  <dependencies>
    <dependency>
      <groupId>org.apache.spark</groupId>
      <artifactId>spark-sql_2.13</artifactId>
      <version>4.0.0</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.sparkutils</groupId>
      <artifactId>testing-runtime_4.0.0.oss_4.0_2.13</artifactId>
      <version>0.0.1-SNAPSHOT</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>com.sparkutils</groupId>
      <artifactId>shim_compilation_4.0.0.oss_4.0_2.13</artifactId>
      <version>0.2.0</version>
      <classifier>sources</classifier>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <groupId>org.apache.spark</groupId>
          <artifactId>spark-sql_2.13</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>com.sparkutils</groupId>
      <artifactId>shim_runtime_4.0.0.oss_4.0_2.13</artifactId>
      <version>0.2.0</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>com.globalmentor</groupId>
      <artifactId>hadoop-bare-naked-local-fs</artifactId>
      <version>0.1.0</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.scala-lang</groupId>
      <artifactId>scala-library</artifactId>
      <version>2.13.16</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.scalatest</groupId>
      <artifactId>scalatest_2.13</artifactId>
      <version>3.0.9</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.scala-lang.modules</groupId>
      <artifactId>scala-collection-compat_2.13</artifactId>
      <version>2.13.0</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.sonatype.plugins</groupId>
        <artifactId>nexus-staging-maven-plugin</artifactId>
        <version>1.6.13</version>
        <extensions>true</extensions>
      </plugin>
    </plugins>
  </build>
</project>
